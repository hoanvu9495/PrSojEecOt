            $("#captcha").keypress(function (event) {
                $("#resetValText").hide();
                if (event.which == 13) {
                    $("#LoginButton").click();
                }
            });
            $("#changepass").dialog({
                title: "Quên mật khẩu",
                autoOpen: false,
                width: 500,
                resizable: false,
                modal: true,
            });
            sessionStorage.clear();
        });

        $("#doimatkhau").click(function () {
            $("#changepass").dialog("open");
        });

        $("#close").click(function () {
            $('#changepass').dialog('close');
        })
        $("#sendRequest").click(function () {
            //validate email
            var email = $("#CREATE_EMAIL").val();
            var filter = /^([a-zA-Z0-9_\-\.]+)*@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
            if ($("#CREATE_EMAIL").val().trim() != "") {
                if (!filter.test(email)) {
                    $("#CREATE_EMAIL_VALIDATE").html("Email không đúng định dạng");
                    return false;
                }
                else {
                    $("#CREATE_EMAIL_VALIDATE").html("");
                }
            }
            if ($("#CREATE_EMAIL").val().trim() == "") {
                $("#CREATE_EMAIL_VALIDATE").html("Nhập địa chỉ email");
                return false;
            } else {
                $("#CREATE_EMAIL_VALIDATE").html("");
            }
            if ($("#forgetcaptcha").val().trim() == "") {
                $("#confirmForgetCodeNull").html("Nhập mã xác nhận");
                return false;
            } else {
                $("#confirmForgetCodeNull").html("");
            }
            //check email để biết người dùng này có trong hệ thống chưa?
            $("#sendRequest").attr("disabled", "disabled");
            $(".process-modal").show();
            $.ajax({
                url: "/Common/LayNguoiDungByEmail",
                type: 'POST',
                data: { email: email },
                success: function (r) {
                    if (r == null) {
                        $(".process-modal").hide();
                        $("#CREATE_EMAIL_VALIDATE").html("Email này không tồn tại trong hệ thống!");
                        $("#sendRequest").removeAttr("disabled");
                        return false;
                    }
                    else {
                        //send Email cho người dùng này
                        var subject = "Thông báo đổi mật khẩu mới";
                        //console.log(r);
                        if (!window.location.origin) {
                            window.location.origin = window.location.protocol + "//" + window.location.hostname + (window.location.port ? ':' + window.location.port : '');
                        }
                        //var body = "Bạn vui lòng ấn vào đường link sau để thay đổi lại mật khẩu của mình: <a href='" + window.location.origin + "/Account/ResetPassword/" + r + "'>Nhấp vào đây</a>";
                        $.ajax({
                            url: "/Common/SendMail",
                            type: 'POST',
                            data: { to: email, subject: subject, captcha: $("#forgetcaptcha").val().trim(), isHtml: true },
                            success: function (d) {
                                if (d.successful == true) {
                                    $(".process-modal").hide();
                                    alert("Bạn gửi yêu cầu thành công! Hãy kiểm tra email của bạn!");
                                    $('#changepass').dialog('close');
                                    $("#sendRequest").removeAttr("disabled");
                                }
                                else {
                                    if (d.chapchar) {
                                        $(".process-modal").hide();
                                        $("#confirmForgetCodeNull").html(d.message);
                                        $("#sendRequest").removeAttr("disabled");
                                    }
                                    else {
                                        $(".process-modal").hide();
                                        CommonJS.alert(d.message);
                                        $("#sendRequest").removeAttr("disabled");
                                        $('#changepass').dialog('close');
                                    }
                                }
                            },
                            error: function (d) {
                                $(".process-modal").hide();
                                CommonJS.alert("Có lỗi xảy ra trong quá trình gửi yêu cầu");
                                $("#sendRequest").removeAttr("disabled");
                            }
                        });
                    }
                },
                error: function (r) {
                    $(".process-modal").hide();
                    CommonJS.alert("Có lỗi xảy ra trong quá trình gửi yêu cầu");
                    $("#sendRequest").removeAttr("disabled");
                }
            });

        });

        $("#close").click(function () {
            $('#changepass').dialog('close');
        });

        function LoginClick() {
            localStorage.removeItem("currentMenuID");
            if (($("#username").val() == null || $("#username").val() == "")) {
                $("#userNameNull").show();
                $("#userNameNull").addClass("tooltip-error");
                $("#username").focus();
                return false;
            } else {
                $("#userNameNull").removeClass("tooltip-error");
            }
            if (($("#password").val() == null || $("#password").val() == "")) {
                $("#passNull").show();
                $("#passNull").addClass("tooltip-error");
                $("#password").focus();
                return false;
            } else {
                $("#passNull").removeClass("tooltip-error");
            }
            if ($("#captcha").length && ($("#captcha").val() == null || $("#captcha").val() == "")) {
                $("#confirmCodeNull").show();
                $("#captcha").focus();
                return false;
            }
            $("#FormLogin").submit();
            return true;
        }

        $("#refreshCaptcha").click(
            function () {
                $("#ImgCaptcha").attr("src", "/Account/GetCaptcha?time=" + new Date().getTime());
            }
            );
        $("#refreshForgetCaptcha").click(function () {
            $("#ImgForgetCaptcha").attr("src", "/Account/GetForgetCaptcha?time=" + new Date().getTime());
        });
        $("#username").focusout(function () {

            if (($("#username").val() == null || $("#username").val() == "")) {
                $("#userNameNull").show();
                //$("#username").focus();
            } else {
                if (!$('#userNameNull').is(':hidden'))
                    $("#userNameNull").hide();
            }

        });
        $("#captcha").focusout(function () {

            if (($("#captcha").val() != null && $("#captcha").val() != "")) {
                $("#confirmCodeNull").hide();
            }
        });

        $("#password").focusout(function () {

            if (($("#password").val() == null || $("#password").val() == "")) {
                $("#passNull").show();
                //$("#password").focus();
            } else {
                if (!$('#passNull').is(':hidden'))
                    $("#passNull").hide();
            }

        });
    </script>
