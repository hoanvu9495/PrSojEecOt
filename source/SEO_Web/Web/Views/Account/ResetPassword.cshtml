<body class="body_login">
    <!--LOG_IN_PAGE-->
    <div id="_GlobalMessage">
    </div>

    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { enctype = "multipart/form-data", @id = "FormResetPass" }))
    {
        <div class="content-main" style="height:500px;">
            <div>
                <div class="left-login-panel">
                    <div class="logo-main">

                        <table>
                            <tr>
                                <td>@*<img class="logo-img" src="/Content/Images/bo-y-te.png" style="width:300px;margin-top:90px;" />*@</td>

                            </tr>
                        </table>
                    </div>
                </div>
                @*<div class="right-top-login-panel" style="margin-top:15px;margin-bottom:15px">
                    <table>
                        <tr>
                            <td><img class="logo-img" src="/Content/Images/logo-aita.png" /></td>

                        </tr>
                    </table>
                </div>*@
                <div class="right-login-panel">
                   
                    <div>
                        <div id="title">
                            <h2>Đổi mật khẩu</h2>
                        </div>
                        <div class="input-field">
                            <span class="input-label">Mật khẩu mới<span class="required">*</span></span>
                            @Html.TextBox("password", "", new { @class = "txt-login e-input", id = "password", type = "password", autocomplete = "on", style = "width:250px" })
                            <div class="input-error" id="passNull"></div>
                        </div>
                        <div class="input-field">
                            <span class="input-label">Nhập lại mật khẩu<span class="required">*</span></span>
                            @Html.TextBox("re-password","", new { @class = "txt-login e-input", id = "re-password", type = "password", autocomplete = "on", style = "width:250px" })
                            <div class="input-error" id="repassNull"></div>
                        </div>
                        <div style="margin-left: 210px; margin-top: 7px;">
                            <input type="button" value="Đổi mật khẩu" id="ChangePassButton" />
                        </div>
                        <div style="margin-left: 410px; margin-top: 7px;">
                            <a href="/Account/Login">Đăng nhập</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clean"></div>
        <div class="footer-main">
            <h2 style="padding-bottom:20px">
                Cục Tin Học Hóa - Bộ Thông tin và Truyền thông<br />
                Địa chỉ: Số 08 Tôn Thất Thuyết , Mỹ Đình, Từ Liêm, Hà Nội
            </h2>
        </div>
    }
    <script>
        $(function () {
            $("#ChangePassButton").click(function () {
                //validate
                if ($("#password").val().trim() == "") {
                    $("#passNull").html("Bạn nhập vào Mật khẩu mới");
                    $("#passNull").css("display", "block");
                    $("#password").focus();
                    return false;
                } else {
                    $("#passNull").css("display", "none");
                }
                var regex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[$@@$!%*?&])[A-Za-z\d$@@$!%*?&]{8,}/;
                if ($("#password").val().trim() != "" && !regex.test($("#password").val().trim())) {
                    $("#passNull").html("Mật khẩu phải ít nhất 8 ký tự và có chứa 1 ký tự hoa,<br/> chữ số, chữ thường và ký tự đặc biệt");
                    $("#passNull").css("display", "block");
                    $("#password").focus();
                    return false;
                } else {
                    $("#passNull").css("display", "none");
                }
                if ($("#re-password").val().trim() != $("#password").val().trim()) {
                    $("#repassNull").html("Nhập lại mật khẩu không khớp");
                    $("#repassNull").css("display", "block");
                    $("#re-password").focus();
                    return false;
                }
                var mk = $("#password").val().trim();
                var href = location.href.split('/');
                var key = "";
                if (href.length > 0) key = href[href.length - 1];
                $.ajax({
                    url: "/Account/ChangePass",
                    type: 'POST',
                    data: { NewPassword: mk, key: key },
                    success: function (d) {
                        if (d.Message == "success") {
                            CommonJS.alert("Mật khẩu của bạn đã được thay đổi thành công!");
                        }
                        else {
                            CommonJS.alert("Thay đổi thất bại!");
                        }
                    },
                    error: function (d) {
                        CommonJS.alert("Có lỗi xảy ra trong quá trình gửi yêu cầu");
                    }
                });
                //gọi hàm lưu mật khẩu
            });
        });
    </script>
</body>
</html>
