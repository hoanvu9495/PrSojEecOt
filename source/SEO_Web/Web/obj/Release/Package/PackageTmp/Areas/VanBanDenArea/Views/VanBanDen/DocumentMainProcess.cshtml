<script type="text/javascript">
    $(document).ready(function () {
        //uncheckAllNormal();
        //$(".is_unread").parent().parent().css("font-weight", "bold");
        if ('@Noti' == '1') {
            notif({
                type: 'success',
                position: 'bottom',
                msg: 'Thêm mới văn bản đến thành công!',
            });
        };

        $("#ViewVanBanDen").dialog({
            autoOpen: false,
            modal: true,
            width: 960,
            height: 760,
            resizable: false,
            show: {
                effect: "blind",
                duration: 200
            },
            hide: {
                effect: "blind",
                duration: 200
            }
        });
    });
    function getParam(name, href) {
        var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(href);
        if (results == null) {
            return null;
        }
        else {
            return results[1] || 0;
        }
    }
    function reloadGrid() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("reloadGrid", "VanBanDen")',
            cache: false,
            data: {
                SearchType: 'Index'
            },
            dataType: "html",
            success: function (data) {
                $("#grid").html(data);
            }
        });
    }

    function PrintDetailVanBan() {
        $("#ViewVanBanDen").printElement();
        return false;
    }

    function ViewDetail(id) {
        $.ajax({
            url: '@Url.Action("ViewVanBanDen","VanBanDen" )',
            type: 'post',
            cache: false,
            data: { ID: id },
            success: function (data) {
                $("#ViewVanBanDen").html(data);
                $("#ViewVanBanDen").dialog("open");
            },
            error: function (err) {
                CommonJS.alert(xhr.responseText);
            }
        });
    }

    function DeleteVanBanDen(ID) {
        $.confirm({
            'title': 'Delete Confirmation',
            'message': 'Bạn có chắc chắn muốn xóa văn bản đến này?',
            'buttons': {
                'Yes': {
                    'class': 'btn-confirm-yes',
                    'action': function () {
                        $.ajax({
                            url: '@Url.Action("Delete", "VanBanDen")',
                            type: 'post',
                            cache: false,
                            data: { ID: ID, SearchType: "Soft" },
                            success: function (data) {
                                notif({
                                    type: 'success',
                                    position: 'bottom',
                                    msg: 'Delete successfully!',
                                });
                                reloadGrid();
                            },
                            error: function (err) {
                                CommonJS.alert(err.responseText);
                            }
                        });
                    }
                },
                'No': {
                    'class': 'btn-info',
                    'action': function () { }	// Nothing to do in this case. You can as well omit the action property.
                }
            }
        });
    }

</script>

