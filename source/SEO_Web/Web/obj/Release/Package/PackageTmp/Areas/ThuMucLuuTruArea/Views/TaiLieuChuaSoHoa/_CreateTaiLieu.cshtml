            weekHeader: "Tu",
            dateFormat: "dd/mm/yy",
            firstDay: 0,
            isRTL: false,
            showMonthAfterYear: false,
            yearSuffix: ""
        };
        datepicker.setDefaults(datepicker.regional.vi);
        return datepicker.regional.vi;
    }));
    $(".chosen-select").chosen({
        disable_search_threshold: 10,
        placeholder_text_single: "Lựa chọn 1 hàng",
        no_results_text: "Oops, Không có kết quả nào",
        width: "50%",
        search_contains: true
    });
    function CreateSuccess() {
        notif({
            type: 'success',
            position: 'bottom',
            msg: 'Đã thêm mới tài liệu!',
        });
        if ($("#MAHANG").val() > 0) {
            $("#UPLOAD_FILE").show();
            $("#THEMTHUMUC").show();
        }
        $("#CreateThuMuc").modal("hide");
    }
    $(function () {
        $("#LOAITAILIEU_ID").change(function () {
            if ($("#LOAITAILIEU_ID").val().trim() != "") {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetThuocTinh", "TaiLieuChuaSoHoa")',
                    data: {
                        LOAITAILIEU: $("#LOAITAILIEU_ID").val()
                    },
                    cache: false,
                    dataType: "html",
                    success: function (data) {
                        $("#DanhSachThuocTinh").html(data);
                        $("#DanhSachThuocTinh").show();
                        $("#h3Thuoctinh").show();
                    }, error: function (xrt) {
                    }
                });
            } else {
                $("#h3Thuoctinh").hide();
                $("#DanhSachThuocTinh").html("");
                $("#DanhSachThuocTinh").hide();
            }
        });
        $("#Xoa_ChuyenVien").click(function () {
            $("#CHUYEN_VIEN").val("");
            $("#CHUYEN_VIEN_HIDEN").val("");
        });
        $(".datepicker").datepicker({
            changeMonth: true,
            changeYear: true,
            minDate: 0,
            maxDate: "+1M"
        }).datepicker("setDate", new Date());
        $("#MAHANG").change(function () {
            if ($(this).val().trim().length > 0) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetFullPath", "TaiLieuChuaSoHoa")',
                    data: {
                        ID: $("#MAHANG").val(),
                        MAHANG: $("#MAHANG").text()
                    },
                    cache: false,
                    dataType: "json",
                    success: function (data) {
                        $("#MAHANG_NULL").hide();
                        $("#MAHANG_CHECK").html(data);
                        $("#MAHANG_CHECK").show();
                    },
                    error: function (xrt) {
                        alert(xrt.responseText);
                    }
                });
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetDataByHang", "TaiLieuChuaSoHoa")',
                    data: {
                        HANG: $("#MAHANG").val()
                    },
                    cache: false,
                    dataType: "json",
                    success: function (data) {
                        var tentailieu = "";
                        $.each(data, function (i, ele) {
                            tentailieu += ele.TENTAILIEU + ",";
                        });
                        $("#TENTAILIEU_CHECK").val(tentailieu);
                    },
                    error: function (xrt) {
                        alert(xrt.responseText);
                    }
                });
            } else {
                $("#MAHANG_CHECK").text("");
            }
        });
        $("#onoffStatus").change(function () {
            if ($("#onoffStatus:checked").length == 1) {
                $(".status_document").fadeOut();
                $('.modal-body').animate({ scrollTop: 500 }, 1200);
                $("#LICHSU").val("on");
                return false;
            } else {
                $(".status_document").fadeIn(1000);
                $('.modal-body').animate({ scrollTop: $(document).height() }, 1200);
                $("#LICHSU").val("off");
                return false;
            }
        });
        $("#onoffDigital").change(function () {
            if ($("#onoffDigital:checked").length == 1) {
                $(".onoffFile").fadeOut();
               
                return false;
            } else {
                $(".onoffFile").fadeIn(1000);
                
                return false;
            }
        });
        $("#TOANHA_ID").change(function () {
            if ($("#TOANHA_ID").val() != "") {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("LoadTangByToaNha", "TaiLieuChuaSoHoa")',
                    data: {
                        TOANHA: $("#TOANHA_ID").val()
                    },
                    cache: false,
                    dataType: "html",
                    success: function (data) {
                        $("#TANGLUUTRU").html(data);
                    },
                    error: function (xrt) {
                        alert(xrt.responseText);
                    }
                });
            } else {
                $("#TANGLUUTRU").html("");
            }
        });
        $("#btnSave").click(function () {
            if ($("#MAHANG").val().trim() == "") {
                $("#MAHANG").focus();
                $("#MAHANG_CHECK").hide();
                $("#MAHANG_NULL").show();
                return false;
            } else {
                $("#MAHANG_NULL").hide();
                $("#MAHANG_CHECK").fadeIn(1000);
            }
            if ($("#MATAILIEU").val().trim() == "") {
                $("#MATAILIEU").focus();
                $("#MATAILIEU_NULL").show();
                return false;
            } else {
                $("#MATAILIEU_NULL").hide();
                if (!/[a-z0-9]+/i.test($("#MATAILIEU").val())) {
                    $("#MATAILIEU").focus();
                    $("#MATAILIEU_HTML").show();
                    return false;
                } else {
                    $("#MATAILIEU_HTML").hide();
                }
            }
            //Kiểm tra trung ma
            var Ma = $("#MATAILIEU_CHECK").val();
            var lstMa = Ma.split(",");
            if ($.inArray($("#MATAILIEU").val().trim().toLowerCase(), lstMa) != -1) {
                $("#MATAILIEU").focus();
                $("#MATAILIEU_ERROR").show();
                return false;
            } else {
                $("#MATAILIEU_ERROR").hide();
            }
            if ($("#TENTAILIEU").val().trim() == "") {
                $("#TENTAILIEU").focus();
                $("#TENTAILIEU_NULL").show();
                return false;
            } else {
                $("#TENTAILIEU_NULL").hide();
                if (/<[a-z][\s\S]*>/i.test($("#TENTAILIEU").val())) {
                    $("#TENTAILIEU").focus();
                    $("#TENTAILIEU_HTML").show();
                    return false;
                } else {
                    $("#TENTAILIEU_HTML").hide();
                }
            }
            //kiểm tra trùng tên
            Ma = $("#TENTAILIEU_CHECK").val();
