@using Web.FwCore
@using Business.Business
@using Business.CommonBusiness
@using Web.Models
@using Web.Areas.VanBanDenArea.Models
@model VanBanDenCreateViewModel
<style>
    /*.chosen-container{
        width: 100% !important;
    }*/
</style>
<fieldset>
    <div class="row">
        <section class="col col-lg-6">
            <div class="form-group">
                <label class="col-sm-3 control-label" for="SOKYHIEU">
                    Số/Ký hiệu <span style="color: red;">*</span>
                </label>
                <div class="col-sm-9" style="padding-right :0">
                    <input type="text" id="SOKYHIEU" name="SOKYHIEU" maxlength="255" class="form-control required">
                    <div class="note-error">
                        <span class="error mes-note-error"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label" for="TRICHYEU">
                    Trích yếu <span style="color: red;">*</span>
                </label>
                <div class="col-sm-9">
                    <textarea name="TRICHYEU" id="TRICHYEU" class="form-control required" style="resize:none;" maxlength="1000"></textarea>
                    <div class="note-error">
                        <span class="error mes-note-error"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label">
                    Cơ quan ban hành <span style="color: red;">*</span>
                </label>
                <div class="col-sm-9" id="DONVIBANHANHROOT">
                    <div id="CONQUANBANHANHSELECTLIST">
                        @Html.DropDownList("COQUANBANHANH_ID", Model.listDonViBanHanhs, new { @style = "width: 100%;", @class = "requiredDropDownList" })
                        <input type="hidden" id="COQUANBANHANHTEXT" name="COQUANBANHANHTEXT" style="width:100%" maxlength="255" class="e-input">
                    </div>
                    <div class="note-error">
                        <span class="error mes-note-error"></span>
                    </div>
                    <p class="alert alert-success">
                        <b>Ghi chú: </b>
                        <i>
                            Trong trường hợp đơn vị ban hành không có trong danh sách, bấm
                            <a href="javascript:void(0)" id="" onclick="openModalInsertDonViBanHanh()">
                                vào đây để thêm đơn vị ban hành
                            </a>
                        </i>
                    </p>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label" for="LOAIVANBAN_ID">
                    Hình thức văn bản <span style="color: red;">*</span>
                </label>
                <div class="col-sm-9" style="padding-left:0">
                    @Html.DropDownList("LOAIVANBAN_ID", Model.listLoaiVanBans, new { @class = " requiredDropDownList", @style = "width: 100%" })
                    <div class="note-error">
                        <span class="error mes-note-error"></span>
                    </div>
                </div>
            </div>

            <div class="form-group clearfix">
                <label class="col-sm-3 control-label" for="NGAYVANBAN">
                    Ngày văn bản <span style="color: red;">*</span>
                </label>
                <div class="col-sm-9" style="padding-right :0">
                    <div class="input-group">
                        <input name="NGAYVANBAN" id="NGAYVANBAN" type="text" class="form-control datepicker1 validateDate" data-mask="99/99/9999" data-mask-placeholder="-">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    </div>
                    <div class="note-error">
                        <span class="error mes-note-error"></span>
                    </div>
                </div>
            </div>

            <div class="form-group clearfix">
                <label class="col-sm-3 control-label" for="THOIHAN_XULY">
                    Ngày đến <span style="color: red;">*</span>
                </label>
                <div class="col-sm-9" style="padding-left :0">
                    <div class="input-group">
                        <input name="NGAYDEN" id="NGAYDEN" type="text" class="form-control datepicker1 validateDate" data-mask="99/99/9999" data-mask-placeholder="-">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    </div>
                    <div class="note-error">
                        <span class="error mes-note-error"></span>
                    </div>
                </div>
            </div>

            @*<div class="form-group clearfix">
                <label class="col-sm-3 control-label" for="NHOMSOVANBAN_ID">
                    Nhóm sổ văn bản đến <span style="color: red;">*</span>
                </label>
                <div class="col-sm-9" style="padding-right :0">
                    @Html.DropDownList("NHOMSOVANBAN_ID", Model.listNhomSoVanBans, "[--- Chọn nhóm sổ văn bản đến ---]", new { @class = " required", @style = "width: 100%" })
                    <i></i>
                    <div class="note-error">
                        <span class="error mes-note-error"></span>
                    </div>
                </div>
            </div>*@

            <div class="form-group">
                <label class="col-sm-3 control-label" for="SOVANBANDEN_ID">
                    Sổ văn bản đến <span style="color: red;">*</span>
                </label>
                <div class="col-sm-9" style="padding-left:0">
                    @Html.DropDownList("SOVANBANDEN_ID", Model.listSoVanBans, new { @class = " requiredDropDownList", @style = "width: 100%" })
                    <div class="note-error">
                        <span class="error mes-note-error"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label" for="SODEN">
                    Số đến <span style="color: red;">*</span>
                </label>
                <div class="col-sm-9" style="padding-right :0">
                    <input type="text" id="SODEN" name="SODEN" maxlength="10" class="form-control required">
                    <div class="note-error">
                        <span class="error mes-note-error"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label" for="SOTRANG">
                    Số trang <span style="color: red;">*</span>
                </label>
                <div class="col-sm-9" style="padding-left :0">
                    <input type="text" id="SOTRANG" name="SOTRANG" maxlength="10" class="form-control required">
                    <div class="note" style="height: 15px;">
                        <span class="error mes-note-error"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label" for="DOKHAN_ID">
                    Độ khẩn <span style="color: red;">*</span>
                </label>
                <div class="col-sm-3">
                    @Html.DropDownList("DOKHAN_ID", Model.listDoKhans, new { @class = "requiredDropDownList", @style = "width:100%" })
                    <div class="note-error">
                        <span class="error mes-note-error"></span>
                    </div>
                </div>

                <div class="col-sm-3 ">
                    <label for="DOMAT_ID" class="control-label" style="padding-left:10px">
                        Độ mật <span style="color: red;">*</span>
                    </label>
                </div>
                <div class="col-sm-3" style="padding-right:0">
                    @Html.DropDownList("DOMAT_ID", Model.listDoMats, new { @class = "requiredDropDownList", @style = "width:100%" })
                    <div class="note-error">
                        <span class="error mes-note-error"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label" for="NOIDUNGVANBAN">
                    Nội dung văn bản
                </label>
                <div class="col-sm-9" style="padding-right:0">
                    <textarea name="NOIDUNGVANBAN" id="NOIDUNGVANBAN" maxlength="1000" class="form-control" style="resize:none"></textarea>
                    <div class="note-error">
                        <span class="error mes-note-error"></span>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <label class="col-sm-3 control-label" for="NGUOIKY">
                    Người ký <span style="color: red;">*</span>
                </label>
                <div class="col-sm-9" style="padding-right:0">
                    <textarea name="NGUOIKY" id="NGUOIKY" maxlength="1000" class="form-control required" style="resize:none"></textarea>
                    <div class="note-error">
                        <span class="error mes-note-error"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label" for="CHUCVU_NGUOIKY">
                    Chức vụ người ký <span style="color: red;">*</span>
                </label>
                <div class="col-sm-9" style="padding-left:0">
                    <textarea name="CHUCVU_NGUOIKY" id="CHUCVU_NGUOIKY" maxlength="1000" class="form-control required" style="resize:none"></textarea>
                    <div class="note-error">
                        <span class="error mes-note-error"></span>
                    </div>
                </div>
            </div>
        </section>

        <section class="col col-lg-6">
            <div class="form-group">
                @{Html.RenderPartial("../Common/UploadFile", new List<Model.eAita.TAILIEUDINHKEM>());}
            </div>
        </section>
    </div>
</fieldset>