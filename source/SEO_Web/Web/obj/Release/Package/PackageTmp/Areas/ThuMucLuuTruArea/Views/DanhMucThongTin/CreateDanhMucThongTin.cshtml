    function XoaTaiLieu(id, cntFolder) {
        
        var file_id = "file_" + id + "_" + cntFolder;
        var filename = $("#TAILIEU_" + id + "").val();
        if (filename.length > 0) {
            $.confirm({
                'title': 'Xác nhận xóa',
                'message': 'Bạn có chắc chắn muốn xóa tài liệu này?',
                'buttons': {
                    'Xóa': {
                        'class': 'btn-confirm-yes',
                        'action': function () {
                            $("#" + file_id).remove();
                        }
                    },
                    'Không xóa': {
                        'class': 'btn-info',
                        'action': function () { } // Nothing to do in this case. You can as well omit the action property.
                    }
                }
            });
        } else {
            $("#" + file_id).remove();
        }
    };
    function XoaFolder(id) {
        var file_id = "file_" + id;
        var filename = $("#THONGTIN_" + id + "").val();
        var row_Count = $("#tbl-ThongTin .tbl-body tr").length;
        if (filename.length > 0) {
            $.confirm({
                'title': 'Xác nhận xóa',
                'message': 'Bạn có chắc chắn muốn xóa thông tin này?',
                'buttons': {
                    'Xóa': {
                        'class': 'btn-confirm-yes',
                        'action': function () {
                            if (row_Count == 1) {
                                $("#THONGTIN_" + id).val("");
                                $(".DINHDANGDIG_" + id).prop('checked', false);
                                $(".DINHDANGDIG_" + id).prop('checked', true);
                                $(".TAIDONVI_" + id).prop('checked', true);
                                $("#DIADIEM_" + id).val("");
                                $("#GHICHU_" + id).val("");
                            } else {
                                $("." + file_id).remove();
                            }
                        }
                    },
                    'Không xóa': {
                        'class': 'btn-info',
                        'action': function () { } // Nothing to do in this case. You can as well omit the action property.
                    }
                }
            });
        } else {
            
            if(row_Count == 1){
                $("#THONGTIN_" + id).val("");
                $(".DINHDANGDIG_" + id).prop('checked', false);
                $(".DINHDANGDIG_" + id).prop('checked', true);
                $(".TAIDONVI_" + id).prop('checked', true);
                $("#DIADIEM_" + id).val("");
                $("#GHICHU_" + id).val("");
            } else {
                $("." + file_id).remove();
            }
        }
    };
    function KiemTra(QUY, NAM) {
        var exist = false;
        $.ajax({
            type: "POST",
            url: '@Url.Action("Validate", "DanhMucThongTin")',
            data: {
                QUY: QUY,
                NAM: NAM
            },
            cache: false,
            dataType: "json",
            async: false,
            success: function (data) {
                if (data.length > 0) {
                    exist = true;
                } else {
                    exist = false;
                }
            }, error: function (xrt) {
                alert(xrt.responseText);
            }
        });
        return exist;
    }
