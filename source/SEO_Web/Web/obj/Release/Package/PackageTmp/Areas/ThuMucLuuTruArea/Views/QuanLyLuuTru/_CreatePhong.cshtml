@model Web.Areas.ThuMucLuuTruArea.Models.QuanLyPhongModel
@using (Ajax.BeginForm("SavePhong", "QuanLyLuuTru", new AjaxOptions
{
    InsertionMode = InsertionMode.Replace,
    HttpMethod = "POST",
    OnFailure = "failure",
    OnSuccess = "CreateSuccess"
}, new { id = "frmThuMucCreate" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thêm mới phòng lưu trữ</h4>
            </div>
            <div class="modal-body">
                <table>
                    <tr>
                        <td>
                            Tòa nhà:<span style="color:red">*</span>
                        </td>
                        <td>
                            <div class="input-field4  clearfix">
                                @Html.DropDownList("TOANHA_ID", new SelectList(Model.lstToaNha, "Value", "Text", Model.PHONG.TOANHA_ID), "[---Lựa chọn tòa nhà---]", new { @style = "", @id = "TOANHA_ID" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                        <td>
                            <span style="color:red;display:none" id="TOANHA_NULL">Bạn cần phải chọn tòa nhà</span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Tên tầng:<span style="color:red;">*</span>
                        </td>
                        <td>
                            <div class="input-field4  clearfix" id="TANGLUUTRU">
                                @Html.DropDownList("TANG_ID", new SelectList(Model.lstTang, "Value", "Text", Model.PHONG.TANG_ID), "[---Lựa chọn tòa nhà---]", new { @style = "", @id = "TANG_ID" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                        <td>
                            <span style="color:red;display:none" id="TANG_NULL">Bạn cần phải chọn tầng lưu trữ</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:150px">
                            Mã phòng:<span style="color:red">*</span>
                        </td>
                        <td>
                            <input type="text" class="e-input" style="width:233px" name="MAPHONG" id="MAPHONG" placeholder="Nhập mã phòng lưu trữ" maxlength="10">
                        </td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                        <td>
                            <span style="color:red;display:none" id="MAPHONG_NULL">Mã phòng lưu trữ không được để trống</span>
                            <span style="color: red; display: none" id="MAPHONG_ERROR">Mã phòng lưu trữ đã tồn tại</span>
                            <span style="color: red; display: none" id="MAPHONG_HTML">Mã phòng lưu trữ chỉ được chứa chữ và số</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:150px">
                            Tên phòng:<span style="color:red">*</span>
                        </td>
                        <td>
                            <input type="text" class="e-input" style="width:233px" name="TENPHONG" id="TENPHONG" placeholder="Nhập tên phòng lưu trữ" maxlength="255">
                        </td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                        <td>
                            <span style="color:red;display:none" id="TENPHONG_NULL">Tên phòng lưu trữ không được để trống</span>
                            <span style="color: red; display: none" id="TENPHONG_ERROR">Tên phòng lưu trữ đã tồn tại</span>
                            <span style="color: red; display: none" id="TENPHONG_HTML">Tên phòng lưu trữ không được chứa ký tự HTML(<>)</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:150px">
                            Mô tả:
                        </td>
                        <td>
                            <textarea class="form-control" name="MOTA" id="MOTA" placeholder="Nhập mô tả cho phòng lưu trữ" maxlength="255"></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                        <td>
                            <span style="color: red; display: none" id="MOTA_HTML">Mô tả phòng lưu trữ không được chứa ký tự HTML(<>)</span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Trạng thái:
                        </td>
                        <td>
                            <div class="input-field4  clearfix">
                                <select name="TRANGTHAI">
                                    <option value="true">Sử dụng</option>
                                    <option value="false">Không sử dụng</option>
                                </select>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">&nbsp;</td>

                    </tr>
                    <tr>
                        <td>
                            Tự động tạo kệ,hàng:
                        </td>
                        <td>
                            <div class="onoffswitch">
                                <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="myonoffswitch" checked>
                                <label class="onoffswitch-label" for="myonoffswitch"></label>
                            </div>

                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">&nbsp;</td>

                    </tr>
                    <tr class="AutoGenerate">
                        <td>
                            Số kệ:<span style="color:red">*</span>
                        </td>
                        <td>
                            <input type="text" class="e-input" style="width:233px" name="SOKE" id="SOKE" maxlength="3" />
                        </td>
                    </tr>
                    <tr class="AutoGenerate">
                        <td>&nbsp;</td>
                        <td>
                            <span style="color:red;display:none" id="SOKE_NULL">
                                Vui lòng nhập số kệ
                            </span>
                            <span style="color:red;display:none" id="SOKE_ERROR">
                                Số kệ phải là số
                            </span>
                        </td>
                    </tr>
                    <tr class="AutoGenerate">
                        <td>
                            Số hàng:<span style="color:red">*</span>
                        </td>
                        <td>
                            <input type="text" class="e-input" style="width:233px" name="SOHANG" id="SOHANG" maxlength="2" />
                        </td>
                    </tr>
                    <tr class="AutoGenerate">
                        <td>&nbsp;</td>
                        <td>
                            <span style="color:red;display:none" id="SOHANG_NULL">
                                Vui lòng nhập số hàng của kệ
                            </span>
                            <span style="color:red;display:none" id="SOHANG_ERROR">
                                Số hàng phải là số
                            </span>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-success" id="btnSave">Thêm mới</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>

    </div>
    <input type="hidden" id="MAPHONG_CHECK" value="" />
    <input type="hidden" id="TENPHONG_CHECK" value="" />
}
<script>
    function CreateSuccess() {
        notif({
            type: 'success',
            position: 'bottom',
            msg: 'Đã thêm mới phòng lưu trữ!',
        });

        $("#CreatePhong").modal("hide");
        reloadGrid();

    }
    function failure(xhr, error) {
        CommonJS.alert(xhr.responseText);
    }
    $(function () {
        $("#MAPHONG").blur(function () {
            if ($(this).val().trim() != "") {
                $("#MAPHONG_NULL").hide();
                $("#MAPHONG_HTML").hide();
                $("#MAPHONG_ERROR").hide();
            }
        });
        $("#TENPHONG").blur(function () {
            if ($(this).val().trim() != "") {
                $("#TENPHONG_NULL").hide();
                $("#TENPHONG_HTML").hide();
                $("#TENPHONG_ERROR").hide();
            }
        });
        $("#myonoffswitch").change(function () {
            if ($("#myonoffswitch:checked").length == 1) {
                $(".AutoGenerate").show();
            } else {
                $(".AutoGenerate").hide();
            }

        });
        $("#TOANHA_ID").change(function () {
            if ($("#TOANHA_ID").val() != "") {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("LoadTangByToaNha", "QuanLyLuuTru")',
                    data: {
                        TOANHA: $("#TOANHA_ID").val()
                    },
                    cache: false,
                    dataType: "html",
                    success: function (data) {
                        $("#TANGLUUTRU").html(data);
                    }
                });
            } else {
                $("#TANGLUUTRU").html("");
            }
        });
        $("#btnSave").click(function (event) {
            var element = this;
            if ($("#TOANHA_ID").val().trim() == "") {
                $("#TOANHA_NULL").show();
                return false;
            } else {
                $("#TOANHA_NULL").hide();
            }
            if ($("#TANG_ID").val().trim() == "") {
                $("#TANG_NULL").show();
                return false;
            } else {
                $("#TANG_NULL").hide();
            }
            if ($("#MAPHONG").val().trim() == "") {
                $("#MAPHONG_NULL").show();
                $("#MAPHONG").focus();
                return false;
            } else {
                $("#MAPHONG_NULL").hide();
                if (/^[a-z0-9]*$/i.test($("#MAPHONG").val()) == false) {
                    $("#MAPHONG").focus();
                    $("#MAPHONG_HTML").show();
                    return false;
                } else {
                    $("#MAPHONG_HTML").hide();

                }
                var Ma = $("#MAPHONG_CHECK").val();
                var lstMa = Ma.split(",");

                if ($.inArray($("#MAPHONG").val().toLowerCase(), lstMa) != -1) {
                    $("#MAPHONG").focus();
                    $("#MAPHONG_ERROR").show();
                    return false;
                } else {
                    $("#MAPHONG_ERROR").hide();
                }
            }
            if ($("#TENPHONG").val().trim() == "") {
                $("#TENPHONG_NULL").show();
                $("#TENPHONG").focus();
                event.preventDefault();
                return false;
            } else {
                $("#TENPHONG_NULL").hide();
                if (/<[a-z][\s\S]*>/i.test($("#TENPHONG").val())) {
                    $("#TENPHONG").focus();
                    $("#TENPHONG_HTML").show();
                    return false;
                } else {
                    $("#TENPHONG_HTML").hide();

                }
                var Ma = $("#TENPHONG_CHECK").val();
                var lstMa = Ma.split(",");

                if ($.inArray($("#TENPHONG").val().toLowerCase(), lstMa) != -1) {
                    $("#TENPHONG").focus();
                    $("#TENPHONG_ERROR").show();
                    return false;
                } else {
                    $("#TENPHONG_ERROR").hide();
                }

            }
            if ($("#myonoffswitch:checked").length == 1) {
                if ($("#SOKE").val().trim() == "") {
                    $("#SOKE_NULL").show();
                    $("#SOKE").focus();
                    return false;
                } else {
                    $("#SOKE_NULL").hide();
                }
                if (/^[0-9]+$/i.test($("#SOKE").val()) == false) {
                    $("#SOKE").focus();
                    $("#SOKE_ERROR").show();
                    return false;
                } else {
                    $("#SOKE_ERROR").hide();
                }
                if ($("#SOHANG").val().trim() == "") {
                    $("#SOHANG_NULL").show();
                    $("#SOHANG").focus();
                    return false;
                } else {
                    $("#SOHANG_NULL").hide();
                }
                if (/^[0-9]+$/i.test($("#SOHANG").val()) == false) {
                    $("#SOHANG").focus();
                    $("#SOHANG_ERROR").show();
                    return false;
                } else {
                    $("#SOHANG_ERROR").hide();
                }
            }
            return true;
        });
    });
</script>
<style>
    .onoffswitch {
        position: relative;
        width: 65px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
    }

    .onoffswitch-checkbox {
        display: none;
    }

    .onoffswitch-label {
        display: block;
        overflow: hidden;
        cursor: pointer;
        height: 28px;
        padding: 0;
        line-height: 28px;
        border: 2px solid #CCCCCC;
        border-radius: 28px;
        background-color: #FFFFFF;
        transition: background-color 0.3s ease-in;
    }

        .onoffswitch-label:before {
            content: "";
            display: block;
            width: 28px;
            margin: 0px;
            background: #FFFFFF;
            position: absolute;
            top: 0;
            bottom: 0;
            right: 35px;
            border: 2px solid #CCCCCC;
            border-radius: 28px;
            transition: all 0.3s ease-in 0s;
        }

    .onoffswitch-checkbox:checked + .onoffswitch-label {
        background-color: #49E845;
    }

        .onoffswitch-checkbox:checked + .onoffswitch-label, .onoffswitch-checkbox:checked + .onoffswitch-label:before {
            border-color: #49E845;
        }

            .onoffswitch-checkbox:checked + .onoffswitch-label:before {
                right: 0px;
            }
</style>