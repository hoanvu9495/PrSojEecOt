@model Web.Areas.ThuMucLuuTruArea.Models.QuanLyKeModel
@using (Ajax.BeginForm("SaveKe", "QuanLyLuuTru", new AjaxOptions
{
    InsertionMode = InsertionMode.Replace,
    HttpMethod = "POST",
    OnFailure = "failure",
    OnSuccess = "CreateSuccess"
}, new { id = "frmThuMucCreate" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thêm mới kệ lưu trữ</h4>
            </div>
            <div class="modal-body">
                <table>
                    <tr>
                        <td>
                            Tòa nhà:<span style="color:red">*</span>
                        </td>
                        <td>
                            <div class="input-field4  clearfix">
                                @Html.DropDownList("TOANHA_ID", new SelectList(Model.lstToaNha, "Value", "Text", Model.KE.TOANHA_ID), "[---Lựa chọn tòa nhà---]", new { @style = "", @id = "TOANHA_ID" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                        <td>
                            <span style="color:red;display:none" id="TOANHA_NULL">Bạn cần phải chọn tòa nhà</span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Tên tầng:<span style="color:red;">*</span>
                        </td>
                        <td>
                            <div class="input-field4  clearfix" id="TANGLUUTRU">
                                @Html.DropDownList("TANG_ID", new SelectList(Model.lstTang, "Value", "Text", Model.KE.TANG_ID), "[---Lựa chọn tầng---]", new { @style = "", @id = "TANG_ID" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                        <td>
                            <span style="color:red;display:none" id="TANG_NULL">Bạn cần phải chọn tầng lưu trữ</span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Tên phòng:<span style="color:red;">*</span>
                        </td>
                        <td>
                            <div class="input-field4  clearfix" id="PHONGLUUTRU">
                                @Html.DropDownList("PHONG_ID", new SelectList(Model.lstPhong, "Value", "Text", Model.KE.PHONG_ID), "[---Lựa chọn phòng---]", new { @style = "", @id = "PHONG_ID" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                        <td>
                            <span style="color:red;display:none" id="PHONG_NULL">Bạn cần phải chọn phòng lưu trữ</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:100px">
                            Mã kệ:<span style="color:red">*</span>
                        </td>
                        <td>
                            <input type="text" class="e-input" style="width:233px" name="MAKE" id="MAKE" placeholder="Nhập mã kệ lưu trữ" maxlength="10">
                        </td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                        <td>
                            <span style="color:red;display:none" id="MAKE_NULL">Mã kệ lưu trữ không được để trống</span>
                            <span style="color: red; display: none" id="MAKE_ERROR">Mã kệ lưu trữ đã tồn tại</span>
                            <span style="color: red; display: none" id="MAKE_HTML">Mã kệ lưu trữ không được chứa ký tự HTML(<>)</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:100px">
                            Tên kệ:<span style="color:red">*</span>
                        </td>
                        <td>
                            <input type="text" class="e-input" style="width:233px" name="TENKE" id="TENKE" placeholder="Nhập tên kệ lưu trữ" maxlength="255">
                        </td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                        <td>
                            <span style="color:red;display:none" id="TENKE_NULL">Tên kệ lưu trữ không được để trống</span>
                            <span style="color: red; display: none" id="TENKE_ERROR">Tên kệ lưu trữ đã tồn tại</span>
                            <span style="color: red; display: none" id="TENKE_HTML">Tên kệ lưu trữ không được chứa ký tự HTML(<>)</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:100px">
                            Mô tả:
                        </td>
                        <td>
                            <textarea style="resize:vertical" class="form-control" name="MOTA" id="MOTA" placeholder="Nhập mô tả cho kệ lưu trữ" maxlength="255"></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                        <td>

                            <span style="color: red; display: none" id="MOTA_HTML">Mô tả kệ lưu trữ không được chứa ký tự HTML(<>)</span>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            Trạng thái:
                        </td>
                        <td>
                            <div class="input-field4  clearfix">
                                <select name="TRANGTHAI">
                                    <option value="true">Sử dụng</option>
                                    <option value="false">Không sử dụng</option>
                                </select>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-success" id="btnSave">Thêm mới</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>

    </div>
    <input type="hidden" value="@Model.TENKE" id="TENKE_CHECK" />
    <input type="hidden" value="@Model.MAKE" id="MAKE_CHECK" />
}
<script>
    function CreateSuccess() {
        notif({
            type: 'success',
            position: 'bottom',
            msg: 'Đã thêm mới kệ lưu trữ!',
        });

        $("#CreateKe").modal("hide");
        reloadGrid();

    }
    function failure(xhr, error) {
        CommonJS.alert(xhr.responseText);
    }
    $(function () {
        $("#MAKE").blur(function () {
            if ($(this).val().trim() != "") {
                $("#MAKE_NULL").hide();
                $("#MAKE_HTML").hide();
                $("#MAKE_ERROR").hide();
            }
        });
        $("#TENKE").blur(function () {
            if ($(this).val().trim() != "") {
                $("#TENKE_NULL").hide();
                $("#TENKE_HTML").hide();
                $("#TENKE_ERROR").hide();
            }
        });
        $("#TOANHA_ID").change(function () {
            if ($("#TOANHA_ID").val() != "") {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("LoadTangByToaNha", "QuanLyLuuTru")',
                    data: {
                        TOANHA: $("#TOANHA_ID").val()
                    },
                    cache: false,
                    dataType: "html",
                    success: function (data) {
                        $("#TANGLUUTRU").html(data);
                    },
                    error: function (xrt) {
                        alert(xrt.responseText);
                    }
                });
            } else {
                $("#TANGLUUTRU").html("");
            }
        });

        $("#btnSave").click(function () {
            var element = this;
            if ($("#TOANHA_ID").val().trim() == "") {
                $("#TOANHA_NULL").show();
                return false;
            } else {
                $("#TOANHA_NULL").hide();
            }
            if ($("#TANG_ID").val().trim() == "") {
                $("#TANG_NULL").show();
                return false;
            } else {
                $("#TANG_NULL").hide();
            }
            if ($("#PHONG_ID").val().trim() == "") {
                $("#PHONG_NULL").show();
                return false;
            } else {
                $("#PHONG_NULL").hide();
            }
            if ($("#MAKE").val().trim() == "") {
                $("#MAKE_NULL").show();
                $("#MAKE").focus();
                return false;
            } else {
                $("#MAKE_NULL").hide();
                if (/^[a-z0-9]*$/i.test($("#MAKE").val()) == false) {
                    $("#MAKE").focus();
                    $("#MAKE_HTML").show();
                    return false;
                } else {
                    $("#MAKE_HTML").hide();

                }
                var Ma = $("#MAKE_CHECK").val();
                var lstMa = Ma.split(",");

                if ($.inArray($("#MAKE").val().toLowerCase(), lstMa) != -1) {
                    $("#MAKE").focus();
                    $("#MAKE_ERROR").show();
                    return false;
                } else {
                    $("#MAKE_ERROR").hide();
                }
            }

            if ($("#TENKE").val().trim() == "") {
                $("#TENKE_NULL").show();
                $("#TENKE").focus();
                return false;
            } else {
                $("#TENKE_NULL").hide();
                if (/<[a-z][\s\S]*>/i.test($("#TENKE").val())) {
                    $("#TENKE").focus();
                    $("#TENKE_HTML").show();
                    return false;
                } else {
                    $("#TENKE_HTML").hide();

                }
                var Ma = $("#TENKE_CHECK").val();
                var lstMa = Ma.split(",");

                if ($.inArray($("#TENKE").val().toLowerCase(), lstMa) != -1) {
                    $("#TENKE").focus();
                    $("#TENKE_ERROR").show();
                    return false;
                } else {
                    $("#TENKE_ERROR").hide();
                }
            }
            return true;
        });
    });
</script>