            //    $("#NOIDUNG_NULL").show();
            //    return false;
            //} else {
            //    $("#NOIDUNG_NULL").hide();
            //}
            if (/<[a-z][\s\S]*>/i.test($("#MOTA").val().trim())) {
                $("#MOTA").select();
