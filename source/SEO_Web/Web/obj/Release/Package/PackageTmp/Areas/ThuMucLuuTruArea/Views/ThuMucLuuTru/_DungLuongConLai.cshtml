@using Business.CommonBusiness
@model Web.Areas.ThuMucLuuTruArea.Models.DungLuongLuuTruModel
<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Dung lượng của từng đơn vị</h4>
        </div>
        <div class="modal-body" style="height:450px;overflow:auto">
            <div class="container" style="width:100%">
                @foreach (var item in Model.ListStorage)
                {
                    var decime = Math.Ceiling((decimal)item.DUNGLUONGSAVED / (decimal)item.DUNGLUONG);
                    if (decime > 100)
                    {
                        decime = 100;
                    }
                    <h2>@item.TENDONVI</h2>
                    <div class="progress">
                        <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:@decime%">
                        </div>
                        @(item.DUNGLUONGSAVED > 0 ? string.Format("{0:#,##}", item.DUNGLUONGSAVED) : "0") Mb của @string.Format("{0:#,##}", item.DUNGLUONG) Mb
                    </div>
                }
            </div>
        </div>
        <div class="modal-footer">
            <input type="hidden" value="true" id="EXISTED_HIDDEN" />
            <button class="btn btn-success" type="button" onclick="location.href='@Url.Action("Index", "QuanLyDungLuongLuuTru")'">Quản lý dung lượng lưu trữ</button>
            <button class="close-modal btn btn-default" type="button" data-dismiss="modal">Đóng</button>
        </div>
    </div>
</div>