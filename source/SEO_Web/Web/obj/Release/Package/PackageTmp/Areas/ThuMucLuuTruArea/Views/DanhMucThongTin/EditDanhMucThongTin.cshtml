<script>
    function RemoveItem(ID) {
        $.ajax({
            type: "POST",
            url: '@Url.Action("RemoveThongTin", "DanhMucThongTin")',
            data: {
                ID: ID
            },
            cache: false,
            dataType: "json",
            success: function (data) {
                notif({
                    type: 'success',
                    position: 'bottom',
                    msg: data,
                });
            }
        });
    }
    function XoaHoSo(ID, count) {
        var file_id = "file_" + count;
        var filename = $("#TAILIEU_" + count + "").val();
        if (filename.length > 0) {
            $.confirm({
                'title': 'Xác nhận xóa',
                'message': 'Bạn có chắc chắn muốn xóa tài liệu này?',
                'buttons': {
                    'Xóa': {
                        'class': 'btn-confirm-yes',
                        'action': function () {
                            $("#" + file_id).remove();
                            RemoveItem(ID);
                        }
                    },
                    'Không xóa': {
                        'class': 'btn-info',
                        'action': function () { } // Nothing to do in this case. You can as well omit the action property.
                    }
                }
            });
        } else {
            $("#" + file_id).remove();
        }
    }
    function XoaThongTin(ID, count) {
        var file_id = "file_" + count;
        var filename = $("#THONGTIN_" + count + "").val();
        if (filename.length > 0) {
            $.confirm({
                'title': 'Xác nhận xóa',
