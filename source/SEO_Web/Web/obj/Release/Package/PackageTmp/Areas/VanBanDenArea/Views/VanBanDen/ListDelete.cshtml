<script type="text/javascript">
    $(document).ready(function () {
        $(".label_trang_thai").hide();
        $("#pop_up_show_application").dialog({
            autoOpen: false,
            modal: true,
            width: 750,
            height: 500,
            resizable: false,
            show: {
                effect: "blind",
                duration: 200
            },
            hide: {
                effect: "blind",
                duration: 200
            }
        });
        $(".egov_gb_b").click(function () {
            $("#pop_up_show_application").dialog("open");
        });
    });

    function reloadGridDelete() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("reloadGrid", "VanBanDen")',
            cache: false,
            data: {
                SearchType: 'Delete'
            },
            dataType: "html",
            success: function (data) {
                $("#SearchResultContentDelete").html(data);
            }
        });
    }

    function PrintDetailVanBan() {
        $("#ViewVanBanDen").printElement();
        return false;
    }

    $(document).ready(function () {
        $("#ViewVanBanDen").dialog({
            autoOpen: false,
            modal: true,
            width: 960,
            height: 760,
            resizable: false,
            show: {
                effect: "blind",
                duration: 200
            },
            hide: {
                effect: "blind",
                duration: 200
            }
        });
    });


    function ViewDetail(id) {
        $.ajax({
            url: '@Url.Action("ViewVanBanDen","VanBanDen" )',
            type: 'post',
            cache: false,
            data: { ID: id },
            success: function (data) {
                $("#ViewVanBanDen").html(data);
                $("#ViewVanBanDen").dialog("open");
            },
            error: function (err) {
                CommonJS.alert(xhr.responseText);
            }
        });
    }
    function Resolve(ID) {
        $.confirm({
            'title': 'Confirmation',
            'message': 'Bạn có chắc chắn muốn khôi phục văn bản đến này?',
            'buttons': {
                'Yes': {
                    'class': 'btn-confirm-yes',
                    'action': function () {
                        $.ajax({
                            url: '@Url.Action("Resolve", "VanBanDen")',
                            type: 'post',
                            cache: false,
                            data: { ID: ID},
                            success: function (data) {
                                notif({
                                    type: 'success',
                                    position: 'bottom',
                                    msg: 'Khôi phục thành công!',
                                });
                                reloadGridDelete();
                            },
                            error: function (err) {
                                CommonJS.alert(err.responseText);
                            }
                        });
                    }
                },
                'No': {
                    'class': 'btn-info',
                    'action': function () { }	// Nothing to do in this case. You can as well omit the action property.
                }
            }
        });
    }
    function DeleteVanBanDen(ID) {
        $.confirm({
            'title': 'Delete Confirmation',
            'message': 'Bạn có chắc chắn muốn xóa vĩnh viễn văn bản đến này?',
            'buttons': {
                'Yes': {
                    'class': 'btn-confirm-yes',
                    'action': function () {
                        $.ajax({
                            url: '@Url.Action("Delete", "VanBanDen")',
                            type: 'post',
                            cache: false,
                            data: { ID: ID, SearchType:"Raw" },
                            success: function (data) {
                                notif({
                                    type: 'success',
                                    position: 'bottom',
                                    msg: 'Delete successfully!',
                                });
                                reloadGridDelete();
                            },
                            error: function (err) {
                                CommonJS.alert(err.responseText);
                            }
                        });
                    }
                },
                'No': {
                    'class': 'btn-info',
                    'action': function () { }	// Nothing to do in this case. You can as well omit the action property.
                }
            }
        });
    }

</script>

