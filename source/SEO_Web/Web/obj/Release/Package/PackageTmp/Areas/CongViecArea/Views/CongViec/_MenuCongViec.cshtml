        font-size: 14px;
    }

    .admin-menu-child .normal {
        font-size: 12px !important;
    }

    .menu-tab {
        width: calc(100% - 20px);
        float: left;
        margin: 0 5px 5px 5px;
        background: #fff;
        margin-top: 10px;
        border-radius: 8px;
