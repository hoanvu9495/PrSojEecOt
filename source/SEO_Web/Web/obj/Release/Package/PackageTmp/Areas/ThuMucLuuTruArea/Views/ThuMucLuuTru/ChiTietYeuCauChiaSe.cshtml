                            </tr>
                            <tr>
                                <td colspan="2">&nbsp;</td>
                            </tr>
                            <tr>
                                <td style="width:150px">Trạng thái hiện tại:</td>
                                <td>
                                    <span style=" white-space: nowrap; font-weight: bold">
                                        @switch (Model.YeuCau.TRANGTHAI)
                                        {
                                            case YeuCauChiaSeConstant.DUTHAO:
                                                <span>Chưa trình</span>
                                                break;
                                            case YeuCauChiaSeConstant.HUYCHIASE:
                                            <span>Dự thảo</span>
                                                break;
                                            case YeuCauChiaSeConstant.DONVIOK:
                                            <span>Đã được chia sẻ</span>
                                                break;
                                            case YeuCauChiaSeConstant.CHUYENYEUCAU:
                                            <span>Chờ chia sẻ</span>
                                                break;
                                            case YeuCauChiaSeConstant.DADUYET:
                                            <span>Đã được duyệt</span>
                                                break;
                                            case YeuCauChiaSeConstant.DATRINH:
                                            <span>Đã trình</span>
