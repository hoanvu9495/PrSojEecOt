                                    </tr>
                                </thead>
                                <tbody id="SelectedItem">
                                    @foreach (var item in Model.lstChiTiet)
                                    {
                                    <tr>
                                        <td class="item-select" data-id="@item.TAILIEU_ID" data-sta="@(item.ISTHUMUC.Value ? 1 : 0)">
                                            @item.TENTAILIEU <br />(@item.TENDONVI)
