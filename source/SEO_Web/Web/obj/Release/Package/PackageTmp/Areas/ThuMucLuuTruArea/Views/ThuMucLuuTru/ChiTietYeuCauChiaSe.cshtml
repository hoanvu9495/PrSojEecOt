                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">&nbsp;</td>
                            </tr>

                        </table>
                        <table class="webGrid tblFixed">
                            <thead>
                                <tr class="head">
                                    <th>
                                        Tên tài liệu - thư mục
                                    </th>

                                    <th>
                                        Ghi chú
                                    </th>
                                    <th>
                                        Trạng thái
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="SelectedItem">
                                @foreach (var item in Model.lstChiTiet)
                                {
                                    <tr>
                                        <td class="item-select" data-id="@item.TAILIEU_ID" data-sta="@(item.ISTHUMUC.Value ? 1 : 0)">
                                            <span title="@item.TENTAILIEU">
                                                @item.TENTAILIEU <br />(@item.TENDONVI)
                                            </span>
                                        </td>
                                        <td>
                                            <span title="@item.GHICHU">
                                                @item.GHICHU
                                            </span>
                                        </td>
                                        <td>
                                            @if (Model.YeuCau.TRANGTHAI == YeuCauChiaSeConstant.DADUYET)
                                            {
                                                if (item.IS_ACCEPT.HasValue && item.IS_ACCEPT.Value)
                                                {
                                                    <span>Đã duyệt</span>
                                                }
                                                else
                                                {
                                                    <span>Từ chối chia sẻ</span>
                                                }
                                            }
                                            else
                                            {
                                                <span>Chờ chia sẻ</span>
                                            }
                                        </td>
                                    </tr>
                                }

                            </tbody>

                        </table>
                    </div>
                    <div style="width:70%;text-align:center;margin:30px auto;margin-bottom:10px">
                        <button class="btn btn-danger" id="btnBack" type="button">Quay lại</button>
                    </div>
                    <div style="width:70%;margin:0 auto">
                        <h3 class="group-tittle mt10">Lịch sử yêu cầu chia sẻ</h3>
                        @Html.Partial("_YeuCauChiaSeLichSu")
                    </div>
                </div>
            </div>
        </div>
    }
}
