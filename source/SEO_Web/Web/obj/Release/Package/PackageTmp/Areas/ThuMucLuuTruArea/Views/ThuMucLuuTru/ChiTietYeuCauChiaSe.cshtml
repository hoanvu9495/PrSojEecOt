@using (Html.BeginForm("SaveYeuCauChiaSe", "ThuMucLuuTru", FormMethod.Post, new { enctype = "multipart/form-data", Id = "frmCreateYeuCau" }))
{
    if (Model.YeuCau.TRANGTHAI == YeuCauChiaSeConstant.DUTHAO || Model.YeuCau.TRANGTHAI == YeuCauChiaSeConstant.TRAVE)
    {
        <div class="right-all-page" oncontextmenu="return false;" style="border-left:1px solid #cccccc; background:#fff;width:100%">
            <div class="right-content clearfix">
                <div class="SearchResult ">
                    @*<div id="URLPath"></div>*@
                    <div class="folder-content">

                        <div id="display">
                            <div id="URLPath" style="float:left;margin-top:24px"></div>
                            <div class="input-field4 clearfix fix-width" style="margin-top:24px;margin-bottom:20px;float:right">
                                @Html.DropDownList("DONVI_ID", Model.lstDonVi, "[---Lựa chọn đơn vị---]", new { @style = "", @id = "DONVI_ID" })
                            </div>
                            <form>
                                <table class="webGrid">
                                    <thead>
                                        <tr class="head">
                                            <th>
                                                Thư mục
                                            </th>
                                            <th>
                                                Đơn vị
                                            </th>
                                            <th>
                                                Số thư mục con
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody id="bodyItem">

                                        @if (lstThuMuc != null && lstThuMuc.Count > 0)
                                        {
                                            foreach (var i in lstThuMuc)
                                            {
                                                var lstChiTiet = Model.lstChiTiet.Where(x => x.TAILIEU_ID == i.ID).ToList();
                                                if (lstChiTiet.Count > 0)
                                                {
                                        <tr style="display:none">
                                            <td data-pid="@("F_"+i.ID)">
                                                @if (i.EXPIRE_DATEFROM.HasValue && i.EXPIRE_DATE.HasValue)
                                                            {
                                                                if (DateTime.Now >= i.EXPIRE_DATEFROM && DateTime.Now <= i.EXPIRE_DATE)
                                                                {
                                                            <span class="folder unexpired" data-donvi="@i.DONVI_ID" title="Thời hạn lưu trữ: @String.Format("{0:dd/M/yyyy}", @i.EXPIRE_DATEFROM) - @String.Format("{0:dd/M/yyyy}", @i.EXPIRE_DATE)" data-pid="@i.ID" data-loaded="false">@i.TENTHUMUC</span>
                                                                }
                                                                else
                                                                {
                                                            <span data-donvi="@i.DONVI_ID" class="folder item" title="@i.TENTHUMUC" data-pid="@i.ID" data-loaded="false">@i.TENTHUMUC</span>
                                                                }
                                                            }
                                                            else
                                                            {
                                                            <span class="folder item" title="@i.TENTHUMUC" data-donvi="@i.DONVI_ID" data-pid="@i.ID" data-loaded="false">@i.TENTHUMUC</span>
                                                            }
                                            </td>
                                            <td>@i.TENDONVI</td>
                                            <td>Có @i.SLTHUMUC thư mục</td>
                                        </tr>
                                                }
                                                else
                                                {
                                        <tr>
                                            <td data-pid="@("F_"+i.ID)">
                                                @if (i.EXPIRE_DATEFROM.HasValue && i.EXPIRE_DATE.HasValue)
                                                            {
                                                                if (DateTime.Now >= i.EXPIRE_DATEFROM && DateTime.Now <= i.EXPIRE_DATE)
                                                                {
                                                            <span class="folder unexpired" data-donvi="@i.DONVI_ID" title="Thời hạn lưu trữ: @String.Format("{0:dd/M/yyyy}", @i.EXPIRE_DATEFROM) - @String.Format("{0:dd/M/yyyy}", @i.EXPIRE_DATE)" data-pid="@i.ID" data-loaded="false">@i.TENTHUMUC</span>
                                                                }
                                                                else
                                                                {
                                                            <span data-donvi="@i.DONVI_ID" class="folder item" title="@i.TENTHUMUC" data-pid="@i.ID" data-loaded="false">@i.TENTHUMUC</span>
                                                                }
                                                            }
                                                            else
                                                            {
                                                            <span class="folder item" title="@i.TENTHUMUC" data-donvi="@i.DONVI_ID" data-pid="@i.ID" data-loaded="false">@i.TENTHUMUC</span>
                                                            }
                                            </td>
                                            <td>@i.TENDONVI</td>
                                            <td>Có @i.SLTHUMUC thư mục</td>
                                        </tr>
                                                }
                                            }

                                        }

