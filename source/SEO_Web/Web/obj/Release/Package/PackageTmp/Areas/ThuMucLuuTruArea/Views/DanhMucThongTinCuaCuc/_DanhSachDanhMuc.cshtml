        <script>
            $(function () {
                $("input[type='checkbox']").change(function () {
                    var ID = $(this).attr("data-id");
                    $('.checked_' + ID).prop('checked', this.checked);
                    var totalRows = $("#CHONNGUOIDUNG td :checkbox").length;
                    var checked = $("#CHONNGUOIDUNG td :checkbox:checked").length;
