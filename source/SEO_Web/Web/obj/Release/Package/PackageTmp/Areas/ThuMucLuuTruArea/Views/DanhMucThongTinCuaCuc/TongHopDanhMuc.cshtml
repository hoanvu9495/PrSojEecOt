                    }
                    DonViChuaTrinh();
                },
                error: function (xhr) {
                    CommonJS.alert(xhr.responseText);
                }
            });
        });
</script>
}
<script>
    $(function () {
        
        $(document).on('click', '#btnSaveData', function () {
            if ($("#NOIDUNG").val().trim() == "") {
                $("#NOIDUNG_NULL").show();
                $("#NOIDUNG").focus();
                $("html, body").animate({
                    scrollTop: 0
                }, 500);
                return false;
            } else {
                $("#NOIDUNG_NULL").hide();
            }
            if (/<[a-z][\s\S]*>/i.test($("#NOIDUNG").val()) || /<[a-z][\s\S]*/i.test($("#NOIDUNG").val())) {
                $("#NOIDUNG").focus();
                $("#NOIDUNG_HTML").show();
                $("html, body").animate({
                    scrollTop: 400
                }, 500);
                return false;
            } else {
                $("#NOIDUNG_HTML").hide();
            }
            var selectAll = 0;
            var trangthai = "";
            $("input.selectedItem:checkbox:checked").each(function () {
                selectAll = 1;
                trangthai += $(this).attr("data-id") + ",";
            });
            if (selectAll == 0) {
                alert("Vui lòng chọn 1 danh mục thông tin tài liệu.");
            } else {
                $.confirm({
                    'title': 'Xác nhận gửi Cục Trưởng',
                    'message': 'Bạn có chắc chắn gửi những thông tin này lên Cục Trưởng?',
                    'buttons': {
                        'Đồng ý': {
                            'class': 'btn-confirm-yes',
                            'action': function () {
                                $("#FOLDER_ID").val(trangthai);
                                $("#frmCreateDonXinNghi").submit();
                                $("#loading").show();
                                $("#btnSaveData").attr('disabled', 'disabled');
                                return true;
                            }
                        },
                        'Đóng': {
                            'class': 'btn-info',
                            'action': function () {
                                return false
                            }
                        }
                    }
                });
                return false;
            }
        });
        $("#btnShowData").click(function () {
            $.ajax({
                url: '@Url.Action("ShowData", "DanhMucThongTinCuaCuc")',
                type: 'POST',
                cache: false,
                data: {
                    QUY: $("#QUY").val().trim(),
                    NAM: $("#NAM").val().trim(),
                    STATUS: false
                },
                success: function (data) {
                    if (data.trim().length > 0) {
                        $("#btnSaveData").show();
                        $("#tbl-ThongTin").html(data);
                    } else {
                        $("#tbl-ThongTin").html("<div style='color:red'>Không tìm thấy dữ liệu phù hợp</div>");
                    }

                    DonViChuaTrinh();
                },
                error: function (xhr) {
                    CommonJS.alert(xhr.responseText);
                }
            });
            return true;
        });
    });
    function DonViChuaTrinh() {
        $.ajax({
            url: '@Url.Action("GetDonVi", "DanhMucThongTinCuaCuc")',
            type: 'POST',
            cache: false,
            data: {
                QUY: $("#QUY").val().trim(),
                NAM: $("#NAM").val().trim()
            },
            success: function (data) {
                $("#DONVI_DISPLAY").html(data);
                $("#DONVI_DISPLAY").show();
                $(".DONVI_NULL").show();
                $("#DONVI_CHUATRINH").attr("class", "clearfix hot-news-list-2");
            },
            error: function (xhr) {
                CommonJS.alert(xhr.responseText);
            }
        });
    }
</script>
