                    $.confirm({
                        'title': 'Không thể thêm thư mục!',
                        'message': 'Xin lỗi thư mục này đang chờ phê duyệt.\n Bạn không thể thêm thư mục vào lúc này.',
                        'buttons': {
                            'Đóng': {
