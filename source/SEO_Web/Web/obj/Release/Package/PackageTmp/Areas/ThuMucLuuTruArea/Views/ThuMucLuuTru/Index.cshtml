<script type="text/javascript">
    $(document).keydown(function (event) {
        var x = event.keyCode;
        if (x == 116) {//F5
            var _data_id = $("#THUMUC_ID_HIDDEN").val();
            if (parseInt(_data_id) > 0) {
                $(".folder").each(function () {//data-loaded
                    if ($(this).attr("data-pid") == _data_id && $(this).attr("data-loaded") != undefined) {
                        $("#bodyItem").html("");
                        $("#footItem").html("");
                        $(this).click();
                        return false;
                    }
                });
                event.preventDefault();
            }
        }
    });
    $(function () {
        $("#btnSearch").click(function () {
            $("#txtSearch").select();
            if ($('#txtSearch:visible').length == 0) {
                $("#txtSearch").show();
            } else {
                if ($("#txtSearch").val().trim().length == 0) {
                    $("#txtSearch").hide();
                } else {

                    if ($('.btn-select').text().trim() == "Tìm theo thư mục") {
                        $("#search_param").val("1");
                    }
                    else if ($('.btn-select').text().trim() == "Tìm file cá nhân") {
                        $("#search_param").val("2");
                    }
                    else if ($('.btn-select').text().trim() == "Tìm file công khai") {
                        $("#search_param").val("3");
                    } else if ($('.btn-select').text().trim() == "Tìm theo tác giả") {
                        $("#search_param").val("4");
                    }
                    else if ($('.btn-select').text().trim() == "Tìm theo tên file") {
                        $("#search_param").val("5");
                    }
                    else if ($('.btn-select').text().trim() == "Tìm trong nội dung file") {
                        $("#search_param").val("6");
                    }
                    else if ($('.btn-select').text().trim() == "Số hiệu của tài liệu") {
                        $("#search_param").val("8");
                    } else if ($('.btn-select').text().trim() == "Tìm kiếm theo tài liệu liên kết") {
                        $("#search_param").val("9");
                    }
                    else {
                        $("#search_param").val("7");
                    }
                    $.ajax({
                        url: '@Url.Action("FindtaiLieu", "ThuMucLuuTru")',
                        type: 'POST',
                        cache: false,
                        data: {
                            FILTER_BOX: $("#search_param").val(),
                            FILTER: $("#txtSearch").val(),
                            FOLDER_ID: $("#THEMTAILIEU").attr("data-pid")
                        },
                        success: function (data) {
                            $("#footItem").html(data);
                            $("#bodyItem").html("");
                            //$(".webGrid th:first-child").hide();
                            //$(".webGrid th:last-child").hide();
                            $(".webGrid td:nth-child(2)").css("width", "20%");
                            //$(".webGrid td:first-child").css("width", "40%");
                        },
                        error: function (xhr) {
                            CommonJS.alert(xhr.responseText);
                        }
                    });
                }
            }
        });
        //filter search box
        $('.search-panel .dropdown-menu').find('a').click(function (e) {
            e.preventDefault();
            var param = $(this).attr("href").replace("#", "");
            var concept = $(this).text();
            switch (concept) {
                case "Tìm theo thư mục":
                    $('#txtSearch').attr('placeholder', 'Nhập tên thư mục');
                    break;
                case "Tìm file cá nhân":
                    $('#txtSearch').attr('placeholder', 'Nhập tên file cá nhân');
                    break;
                case "Tìm file công khai":
                    $('#txtSearch').attr('placeholder', 'Nhập tên file công khai');
                    break;
                case "Tìm theo tên file":
                    $('#txtSearch').attr('placeholder', 'Nhập tên file');
                    break;
                case "Tìm trong nội dung file":
                    $('#txtSearch').attr('placeholder', 'Nhập Nội dung file');
                    break;
                case "Tìm theo tác giả":
                    $('#txtSearch').attr('placeholder', 'Tìm theo tác giả');
                    break;
                case "Số hiệu của tài liệu":
                    $('#txtSearch').attr('placeholder', 'Nhập số hiệu của tài liệu');
                    break;
                case "Tìm kiếm theo tài liệu liên kết":
                    $('#txtSearch').attr('placeholder', 'Nhập tên tài liệu liên kết');
                    break;
                case "Tất cả":
                    $('#txtSearch').attr('placeholder', 'Tìm kiếm...');
                    break;
                case "Tên tăng dần":
                    SortItem($("#THEMTHUMUC").attr("data-pid"), '@ThuMucLuuTruSortModel.SortByName');
                    break;
                case "Tên giảm dần":
                    SortItem($("#THEMTHUMUC").attr("data-pid"), '@ThuMucLuuTruSortModel.SortByNameDesc');
                    break;
                case "Tác giả tăng dần":
                    SortItem($("#THEMTHUMUC").attr("data-pid"), '@ThuMucLuuTruSortModel.SortByAuthor');
                    break;
                case "Tác giả giảm dần":
                    SortItem($("#THEMTHUMUC").attr("data-pid"), '@ThuMucLuuTruSortModel.SortByAuthorDesc');
                    break;
                case "Ngày tạo tăng dần":
                    SortItem($("#THEMTHUMUC").attr("data-pid"), '@ThuMucLuuTruSortModel.SortByDate');
                    break;
                case "Ngày tạo giảm dần":
                    SortItem($("#THEMTHUMUC").attr("data-pid"), '@ThuMucLuuTruSortModel.SortByDateDesc');
                    break;
            }
            $('.search-panel span#search_concept').text(concept);
            $('.input-group #search_param').val(param);
        });
        $(document).on('click', '.share-file', function () {
            ShareFile($(this).attr('data-fid'), $(this).attr('data-file'));
        });
        $(document).on('click', '.share-fileplus', function () {
            ShareFile($(this).attr('data-fid'), $(this).attr('data-file'));
        });
        $(".AddFolder").click(function () {
            CreateThuMuc(0);
        });
    });
    //Load lại data khi đổi tên
    function ReloadData(ID, FName) {
        $("#treeview li").each(function () {
            if ($(this).attr("data-fid") == "F_" + ID) {
                $(this).children("span").html(FName);
            }
        });
        $("#bodyItem td").each(function () {
            if ($(this).attr("data-pid") == "F_" + ID) {
                $(this).children("span").html(FName);
            }
        });
    }
    function ReloadDataRename(ID, FName, IS_CENSOR) {
        $("#treeview li").each(function () {
            if ($(this).attr("data-fid") == "F_" + ID) {
                $(this).children("span").html(FName);
            }
        });
        $("#bodyItem td").each(function () {
            if ($(this).attr("data-pid") == "F_" + ID) {
                $(this).children("span").html(FName);
                if (IS_CENSOR) {
                    $(this).closest("tr").find("td:first-child").html("<input type='checkbox' class='checkbox1' value='" + ID + "' data-pid='" + ID + "' />");
                }
            }
        });
    }
    //Xóa thư mục
    function RemoveThuMuc(ID) {
        $.confirm({
            'title': 'Xác nhận xóa',
            'message': 'Bạn có chắc chắn muốn xóa thư mục này?',
            'buttons': {
                'Xóa': {
                    'class': 'btn-confirm-yes',
                    'action': function () {
                        $.ajax({
                            url: '@Url.Action("RemoveThuMuc", "ThuMucLuuTru")',
                            type: 'post',
                            cache: false,
                            data: { ID: ID },
                            success: function (data) {
                                if (ID == 0) {
                                    reloadGrid();
                                    reloadTable();
                                } else {
                                    notif({
                                        type: 'success',
                                        position: 'bottom',
                                        msg: 'Xóa thư mục thành công!',
                                    });
                                    if ($("#THEMTHUMUC").attr("data-pid") <= 0) {
                                        reloadGrid();
                                        reloadTable();
                                    } else {
                                        $("#treeview li").each(function () {
                                            if ($(this).attr("data-fid") == "F_" + ID) {
                                                $(this).fadeOut("slow");
                                            }
                                        });
                                        $("#bodyItem td").each(function () {
                                            if ($(this).attr("data-fid") == "F_" + ID) {
                                                $(this).closest("tr").fadeOut("slow");
                                            }
                                        });
                                    }
                                }
                            },
                            error: function (err) {
                                CommonJS.alert(err.responseText);
                            }
                        });
                    }
                },
                'Không xóa': {
                    'class': 'btn-info',
                    'action': function () { }
                }
            }
        });
    }
    function CheckFolderRemove(THUMUC_ID) {
        $.ajax({
            type: "POST",
            url: '@Url.Action("KiemTraXoaThuMuc", "ThuMucLuuTru")',
            data: {
                THUMUC_ID: THUMUC_ID
            },
            cache: false,
            dataType: "json",
            success: function (data) {
                if (data == "Co") {
                    RemoveThuMuc(THUMUC_ID);
                } else {
                    $.confirm({
                        'title': 'Không thể xóa thư mục này!',
                        'message': 'Bạn không có quyền xóa thư mục này.',
                        'buttons': {
                            'Đóng': {
                                'class': 'btn-info',
                                'action': function () { } // Nothing to do in this case. You can as well omit the action property.
                            }
                        }
                    });
                }
            }
        });
    }
    //Load lại dữ liệu khi thêm mới
    function LoadDataByID(ParentID) {
        $(".folder").each(function () {
            if ($(this).attr("data-pid") == ParentID && $(this).attr("data-loaded") != undefined) {
                $(this).click();
                return false;
            }
        });
    }
    function SortItem(ParentID, sort) {
        if (ParentID > 0) {
            $(".folder").each(function () {
                if ($(this).attr("data-pid") == ParentID && $(this).attr("data-loaded") != undefined) {
                    $(this).attr("data-sort", sort);
                    $(this).click();
                    return false;
                }
            });
        } else {
            reloadGridSort(sort);
            reloadTableSort(sort);
            $("#URLPath").html("");
            $(".webGrid").show();
            $(".emptydata").hide();
            $("#THEMTHUMUC").attr("data-pid", "0");
            $("#UPLOAD_FILE").hide();
        }
    }
    function RenameThuMuc(ID) {
        $.ajax({
            url: '@Url.Action("RenameThuMuc", "ThuMucLuuTru")',
            type: 'post',
            cache: false,
            data: {
                ID: ID
            },
            success: function (data) {
                if (data.trim().length > 0) {
                    $("#RenameThuMuc").html(data);
                    $("#RenameThuMuc").modal("show");
                    $("#RenameThuMuc").find(".modal-dialog").css("width", "600px");
                } else {
                    $.confirm({
                        'title': 'Không thể cập nhập!',
                        'message': 'Thư mục này đang được trình cục trưởng bạn không thể cập nhập vào lúc này!',
                        'buttons': {
                            'Đóng': {
                                'class': 'btn-confirm-yes',
                                'action': function () {
                                }
                            }
                        }
                    });
                }
            },
            error: function (xhr) {
                CommonJS.alert(xhr.responseText);
            }
        });
    }
    function UploadFile(ID) {
        $.ajax({
            url: '@Url.Action("UploadFile", "ThuMucLuuTru")',
            type: 'post',
            cache: false,
            data: {
                FOLDER_ID: ID
            },
            success: function (data) {
                if (data.trim().length > 0) {
