<link href="~/Content/Custom/Font/jquery.contextMenu.css" rel="stylesheet" />
<script type="text/javascript">
    $(function () {
        $('#selectAll').click(function (event) {
            if (this.checked) {
                $('.checkbox1').each(function () {
                    this.checked = true;
                });
            } else {
                $('.checkbox1').each(function () {
                    this.checked = false;
                });
            }
        });
        $("#selectnam").change(function () {
            reloadGrid();
            reloadTable();
        });
    });
</script>
