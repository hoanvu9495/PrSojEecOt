                            <div class="input-field2 clearfix float-left" id="dropdown--thaydoi-trangthai">
                                @Html.DropDownListFor(m => m.CongViec.TRANGTHAI_ID, Model.ListTrangThai, new { @class = " width-100", Id = "dropdown--trangthai-congviec" })
                            </div>
