                        {
                            <tr>
                                <td width="150px">
                                    <label class="lbl">Hoàn thành thực tế:</label>
                                </td>
                                <td style="padding-top:2px;">
                                    <label>@string.Format("{0:dd/MM/yyyy}", task.NGAYHOANTHANH)</label>
                                </td>
                            </tr>
                        }
                        if (Model.ListTienDoCongViec != null && Model.ListTienDoCongViec.Count > 0)
