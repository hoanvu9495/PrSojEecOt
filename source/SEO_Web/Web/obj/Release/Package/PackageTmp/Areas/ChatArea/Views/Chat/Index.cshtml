@using Web.Areas.ChatArea.Models
@model ChatIndexViewModel
@{
    ViewBag.Title = "Trao đổi - thảo luận";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">

    .overview {
    position: absolute;
    bottom: 34px;
}

        .bg-white {
            background-color: #fff;
        }

        .friend-list {
            list-style: none;
            max-height: 500px;
        overflow-y: auto;
        overflow-x: hidden;
        }

            .friend-list li {
                border-bottom: 1px solid #eee;
            }

                .friend-list li a img {
                    float: left;
                    width: 30px;
                    height: 30px;
                        margin-right: 15px;
                }

                .friend-list li a {
                    position: relative;
                    display: block;
                    padding: 5px 10px;
                    transition: all .2s ease;
                    -webkit-transition: all .2s ease;
                    -moz-transition: all .2s ease;
                    -ms-transition: all .2s ease;
                    -o-transition: all .2s ease;
                }

                .friend-list li.active a {
                    background-color: #f1f5fc;
                }

                .friend-list li:hover a {
                    background-color: #f1f5fc;
                }

                .friend-list li a .friend-name,
                .friend-list li a .friend-name:hover {
                    color: #777;
                    margin-top:5px;
                }

                .friend-list li a .last-message {
                    width: 65%;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                    overflow: hidden;
                }

                .friend-list li a .time {
                    position: absolute;
                    top: 10px;
                    right: 8px;
                }

        small, .small {
            font-size: 85%;
        }

        .friend-list li a .chat-alert {
                position: absolute;
        right: 8px;
        top: 5px;
        font-size: 11px;
        padding: 3px 5px;
        width: 20px;
        border-radius: 50%;
        background: orange;
        color: #fff;
        text-align: center;
        }
        .friend-list li a .text-null {
            padding:0px;
        }

        .chat-message {
        height: 510px;
        background: #f9f9f9;
        }

        img {
            max-width: 100%;
        }
        .text-muted {
        color: #777;
    }.img-circle {
        border-radius: 50%;
    }

</style>
