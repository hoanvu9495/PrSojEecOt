@Html.Partial("_MenuVanBanDen", new ViewDataDictionary { { "active", "o-1" } })
<div class="right-all-page" style="background:#fff;" id="ViewVanBanDen">
    @Html.Partial("_ViewVanBanDen")
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#block-search-form #search-form").hide();
    });
    function PrintDetailVanBan() {
        $("#ViewVanBanDen").printElement();
        return false;
    }
    function reloadPage() {
        location.reload();
    }
</script>