<style>
    #smart-dms > h1 {
        margin-left: 15px !important;
        text-align: left !important;
    }
    #NAM,#QUY {
        -moz-user-select: none;
        background-image: none;
        border-radius: 4px;
        cursor: pointer;
        display: inline-block;
        font-size: 14px;
        font-weight: 400;
        line-height: 1.42857;
        margin-bottom: 0;
        padding: 2px 12px;
        text-align: center;
        vertical-align: middle;
        white-space: nowrap;
        color: black !important;
    }

    #display {
        width: 40%;
        margin-right: 10px;
        float: left;
        min-height: 80%;
        overflow-y: auto;
        overflow-x: hidden;
    }

    #treeview {
        float: left;
        width: 49%;
    }

    #Path li {
        float: left;
    }

    .tblDanhMuc .webGrid th:nth-child(4), .tblDanhMuc .webGrid th:nth-child(5) {
        text-align: left !important;
    }

    .webGrid th {
        text-align: center !important;
    }
</style>
<script>
    $(function () {
        var date = new Date();
        var curMonth = date.getMonth() + 1;
        if (curMonth >= 1 && curMonth <= 3) {
            $("#QUY").val("1");
        } else if (curMonth >= 4 && curMonth <= 6) {
            $("#QUY").val("2");
        } else if (curMonth >= 7 && curMonth <= 9) {
            $("#QUY").val("3");
        } else {
            $("#QUY").val("4");
        }
        $("#QUY,#NAM").change(function () {
            LoadData($("#QUY").val(), $("#NAM").val());
        });
        $("#DONVI_ID").change(function () {
            var ID = $(this).val();
            if ($(this).val() != "") {
                $('.tblDanhMuc .webGrid > tbody  > tr').each(function () {
                    if ($(this).attr("data-id") != ID) {
                        $(".donvi_" + $(this).attr("data-id")).hide();
                    } else {
                        $(".donvi_" + $(this).attr("data-id")).show();
                    }
                });
            } else {
                $(".donvishow").show();
            }
        });
        $("#btnChoose").click(function () {
            var DANHMUC = "";
            $('.tblDanhMuc .webGrid > tbody  > tr').each(function () {
                var row = $(this);
                if (row.find('input[type="checkbox"]').is(':checked')) {
                    DANHMUC += row.find('input[type="checkbox"]').val() + ",";
                    row.hide();
                }
            });
            if (DANHMUC == "") {
                $.confirm({
                    'title': 'Không thể thực hiện hành động',
                    'message': 'Không tìm thấy danh mục thông tin, tài liệu được chọn',
                    'buttons': {
                        'Đóng': {
                            'class': 'btn-info',
                            'action': function () {
                                return false;
                            }
                        }
                    }
                });
                return false;
            } else {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("LuaChonDanhMuc", "YeuCauChiaSe")',
                    data: {
                        DANHMUC_ID: DANHMUC
                    },
                    cache: false,
                    dataType: "html",
                    success: function (data) {
                        $(".YeuCau").show();
                        $("#tblResult").html(data);
                    }
                });
            }
        });
        $("#btnSave").click(function () {
            if ($("#LYDO").val() == "") {
                $("#LYDO").focus();
                $("#LYDO_NULL").show();
                return false;
            } else {
                $("#LYDO_NULL").hide();
            }
            if (/<[a-z][\s\S]*>/i.test($("#LYDO").val()) || /<[a-z][\s\S]*/i.test($("#LYDO").val())) {
                $("#LYDO").focus();
                $("#LYDO_ERROR").show();
                $("html, body").animate({
                    scrollTop: 0
                }, 500);
                return false;
            } else {
                $("#LYDO_ERROR").hide();
            }
            return true;
        });
        $("#btnSendMan").click(function () {
            if ($("#LYDO").val() == "") {
                $("#LYDO").focus();
                $("#LYDO_NULL").show();
                return false;
            } else {
                $("#LYDO_NULL").hide();
            }
            if (/<[a-z][\s\S]*>/i.test($("#LYDO").val()) || /<[a-z][\s\S]*/i.test($("#LYDO").val())) {
                $("#LYDO").focus();
                $("#LYDO_ERROR").show();
                $("html, body").animate({
                    scrollTop: 0
                }, 500);
                return false;
            } else {
                $("#LYDO_ERROR").hide();
            }
            $.ajax({
                type: "GET",
                url: '@Url.Action("TrinhCucTruong", "YeuCauChiaSe")',
                data: {
                    ID: 0
                },
                cache: false,
                dataType: "html",
                success: function (data) {
                    $("#TrinhDuyetYeuCau").html(data);
                    $("#TrinhDuyetYeuCau").modal('show');
                }
            });
            return false;
        });
    });
    function LoadData(QUY, NAM) {
        $.ajax({
            type: "GET",
            url: '@Url.Action("LoadDanhMuc", "YeuCauChiaSe")',
            data: {
                QUY: QUY,
                NAM: NAM
            },
            cache: false,
            dataType: "html",
            success: function (data) {
                $(".tblDanhMuc").html(data);
            }
        });
    }
    function XoaDanhMuc(ID) {
        $.confirm({
            'title': 'Xác nhận xóa',
            'message': 'Bạn có chắc chắn muốn xóa danh mục thông tin,tài liệu này?',
            'buttons': {
                'Xóa': {
                    'class': 'btn-confirm-yes',
                    'action': function () {
                        $.ajax({
                            type: "GET",
                            url: '@Url.Action("XoaDanhMuc", "YeuCauChiaSe")',
                            data: {
                                ID:ID
                            },
                            cache: false,
                            dataType: "json",
                            success: function (data) {
                            }
                        });
                        LoadData($("#QUY").val(), $("#NAM").val());
                        $("#DANHMUC_" + ID).remove();
                    }
                },
                'Không xóa': {
                    'class': 'btn-info',
                    'action': function () { } // Nothing to do in this case. You can as well omit the action property.
                }
            }
        });
    }
</script>