<script type="text/javascript">
    function reloadGrid() {

        $.ajax({
            type: "GET",
            url: '@Url.Action("ReloadKe", "QuanLyLuuTru")',
            data: {
                PHONG: 0
            },
            cache: false,
            dataType: "html",
            success: function (data) {
                $(".SearchResult").html(data);
            }
        });
    }
    function failure(xrt) {
        alert(xrt.responseText);
    }
    function OnCreate() {
        $.ajax({
            url: '@Url.Action("CreateKe", "QuanLyLuuTru")',
            type: 'post',
            cache: false,
            data: {
                PHONG: 0
            },
            success: function (data) {
                $("#CreateKe").html(data);
                $("#CreateKe").modal("show");
            },
            error: function (xhr) {
                CommonJS.alert(xhr.responseText);
            }
        });

    }
    function EditKe(ID) {
        $.ajax({
            url: '@Url.Action("EditKe", "QuanLyLuuTru")',
            type: 'post',
            cache: false,
            data: {
                ID: ID
            },
            success: function (data) {
                $("#EditKe").html(data);
                $("#EditKe").modal("show");
            },
            error: function (xhr) {
                CommonJS.alert(xhr.responseText);
            }
        });
    }
</script>
