                                </td>
                                <td>
                                    @Html.Raw(Model.vbDen.TENTRANGTHAI)
                                </td>
                                <td class="td-label">
                                    <label class="lbl-title">Ngày đến</label>
                                </td>
                                <td>
                                    @string.Format("{0:dd-MM-yyyy}", Model.vbDen.NGAYDEN)
                                </td>
                            </tr><!--NỘI DUNG VĂN BẢN-->
                            <tr>
                                <td class="td-label">
                                    <label class="lbl-title">Tài liệu đính kèm</label>
                                </td>
