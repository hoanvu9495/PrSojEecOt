                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            <b>
                                                Trích yếu
                                            </b>
                                        </th>
                                        <th>
                                            <b>
                                                Số hiệu
                                            </b>
                                        </th>
                                        <th>
                                            <b>
                                                Loại văn bản
                                            </b>
                                        </th>
                                    </tr>
                                </thead>
