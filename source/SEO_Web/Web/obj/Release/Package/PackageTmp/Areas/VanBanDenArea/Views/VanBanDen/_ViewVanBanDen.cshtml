                            @*<tr>
                                <td>
                                    <label class="lbl-title">Nội dung văn bản</label>
                                </td>
                                <td colspan="3">
                                    @Html.Raw(Model.vbDen.NOIDUNGVANBAN)
                                </td>
                            </tr>*@
                            <!--NỘI DUNG VĂN BẢN-->
                            <tr>
                                <td class="td-label">
