            multiple: false,
            filter: false,
            single: true,

            placeholder: "Chọn chức năng"
        });

        //$("#CREATE_CHUCNANGCAP2").multipleSelect({
        //    multiple: false,
        //    filter: false,
        //    single: true,
        //    placeholder: "Chọn chức năng"

        //});
        $("#TRANGTHAI").multipleSelect({
            multiple: false,
            filter: false,
            single: true,
        });

        $("#CREATE_TT_HIENTHI").autoNumeric({
