@using Web.Common
@using Web.FwCore;
<div id="collapseOne" class="panel-collapse collapse" aria-expanded="false" role="tabpanel" style="">
    @Html.AntiForgeryToken()
    @using (Ajax.BeginForm("FindVanBanDen", "VanBanDen", new { SearchType = "Index" }, new AjaxOptions()
        {
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "POST",
            OnFailure = "failure",
            OnSuccess = "searchSuccess",
            UpdateTargetId = "grid",
        }, new { id = "frmSearh" }))
    {
        <div>
            <center>
                <table style="width:80%;">
                    <tr style="height: 10px;"></tr>
                    <tr>
                        <td width="160">
                            <label>Tên danh hiệu:</label>
                        </td>
                        <td colspan="3">
                            @Html.TextBox("DANHHIEUTHIDUA", "", new { @placeholder = "Tìm theo tên danh hiệu thi đua", id = "DANHHIEUTHIDUA", @style = "width: 655px;", @class = "e-input" })
                        </td>
                    </tr>
                    <tr style="height: 10px;"></tr>
                    <tr>
                        <td width="160px">
                            <label>Sổ văn bản:</label>
                        </td>
                        <td>
                            <div class="input-field4 clearfix fix-width">
                                @Html.DropDownList("SOVANBANDEN_ID", Model.ListSoVanBanDen, new { @class = "width_100", @style = "padding-right:30px", @multiple = "multiple" })
                            </div>
                        </td>
                        <td width="160px">
                            <label>Số đến:</label>
                        </td>
                        <td>
                            @Html.TextBox("SODEN", "", new { @placeholder = "Tìm theo số đến của văn bản", id = "SODEN", @style = "width: 233px;", @class = "e-input" })
                        </td>
                    </tr>
                </table>
            </center>
        </div>
    }
</div>