@{
    ViewBag.Title = "Quản lý đơn xin nâng lương";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Business.CommonBusiness;
@using Web.FwCore;
@using Web.Areas.QuanLyNangLuongTruocThoiHanArea.Models;
@model Web.Areas.QuanLyNangLuongTruocThoiHanArea.Models.NangLuongViewModel
@{
    List<NltthDonxinNangluongBO> LstDonXinNL = new List<NltthDonxinNangluongBO>();

    var Noti = SessionManager.GetValue("Noti");
    SessionManager.Remove("Noti");

}
<style>
    .ms-choice {
        color: black;
    }
</style>
<link rel="stylesheet" type="text/css" href="/Content/Custom/css/multiple-select.css">
<script type="text/javascript" src="/Scripts/multiple-select.js"></script>
<div id="menu-toolbar">
    <div class="left-all-page">
        <div class="block" id="smart-dms">
            <h1>NÂNG LƯƠNG</h1>
        </div>
    </div>
    <div class="right-all-page" style="background:none; border:none">
        <div id="menu-child">
            <div class="menu-left" style="display:inline-block">

                @*button*@
                <div>
                    @if (Model.is_TruongDonVi)
                    {
                        @Html.Partial("_LanhDaoDonVi")
                    }
                    else if (Model.is_VanThu)
                    {
                        @Html.Partial("_VanThu")
                    }
                    else if (Model.is_CucTruong)
                    {
                        @Html.Partial("_CucTruong")
                    }
                    else if (Model.is_ChanhVanPhong)
                    {
                        @Html.Partial("_ChanhVanPhong")
                        @Html.Partial("_ChonChuyenVien", Model)
                    }
                    else
                    {

                    }
                </div>
                @*end*@
            </div>
            <div class="menu-right">
                <div class="right">
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_MenuLeft")
<div class="right-all-page" style="border-left:1px solid #cccccc; background:#fff; min-height: 500px">
    @*test*@
    <div class="panel-heading" role="tab" id="headingOne" style="padding-left: 0px;margin-bottom: -11px">
        <h3 class="panel-title group-tittle mt10" style="height: 41px; ">
            <a class="" aria-controls="collapseOne" aria-expanded="false" href="#collapseOne" data-toggle="collapse" role="button">
                Tìm kiếm nâng cao
            </a>
        </h3>
    </div>
    <div id="collapseOne" class="panel-collapse collapse" aria-expanded="false" role="tabpanel" style="">
        @if (Model.is_TruongDonVi)
        {
            @Html.Partial("_Filter_LanhDaoDonVi")
        }
        else if (Model.is_VanThu)
        {
            @Html.Partial("_Filter_VanThu")
        }
        else if (Model.is_CucTruong)
        {
            @Html.Partial("_Filter_CucTruong")
        }
        else if (Model.is_ChanhVanPhong)
        {
            @Html.Partial("_Filter_ChanhVanPhong", Model)
        }
    </div>
    @*end*@ 
    @Html.Partial("_ResultData")
</div>

<div id="myModalViewHistory" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Lịch sử tăng lương cán bộ</h4>
            </div>
            <div class="modal-body" id="history_tang_luong_body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>

    </div>
</div>
